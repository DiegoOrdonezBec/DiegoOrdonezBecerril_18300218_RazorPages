@page
@model DiegoOrdonezBecerril_18300218_RazorPages.Pages.Profesores.CreateModel
@{
    ViewData["Title"] = "Crear curso";
}

<br />
<h2 class="text-info">Agregar nuevo profesor</h2>

<div class="border">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="container p-3">
            <div class="form-group">
                <div class="row">
                    <div class="offset-3 col-2">
                        <label asp-for="ProfesorF.Nombre"></label>
                    </div>
                    <div class="col-4">
                        <input asp-for="ProfesorF.Nombre" placeholder="Nombre del profesor" class="form-control" />
                    </div>
                    <span asp-validation-for="ProfesorF.Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="offset-3 col-2">
                        <label asp-for="ProfesorF.FechaNacimiento"></label>
                    </div>
                    <div class="col-4">
                        <input asp-for="ProfesorF.FechaNacimiento" placeholder="Fecha de nacimiento" class="form-control" />
                    </div>
                    <span asp-validation-for="ProfesorF.FechaNacimiento" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="offset-3 col-2">
                        <label asp-for="ProfesorF.Sexo"></label>
                    </div>
                    <div class="col-4">
                        <select asp-for="ProfesorF.Sexo" asp-items="Model.OpcionesSexo" class="form-control"></select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="offset-4 col-2">
                        <input type="submit" value="Agregar" class="btn btn-primary form-control" />
                    </div>
                    <div class="col-2">
                        <a asp-page="Index" class="btn btn-success form-control">Regresar</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>