@page
@model DiegoOrdonezBecerril_18300218_RazorPages.Pages.Cursos.EditModel
@{
    ViewData["Title"] = "Editar curso";
}

<br />
<h2 class="text-info">Editar curso</h2>

<div class="border">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="Curso.Id"/>
        <div class="container p-3">
            <div class="form-group">
                <div class="row">
                    <div class="offset-3 col-2">
                        <label asp-for="Curso.Nombre"></label>
                    </div>
                    <div class="col-4">
                        <input asp-for="Curso.Nombre" placeholder="Nombre del curso" class="form-control" />
                    </div>
                    <span asp-validation-for="Curso.Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="offset-3 col-2">
                        <label asp-for="Curso.Cantidad"></label>
                    </div>
                    <div class="col-4">
                        <input asp-for="Curso.Cantidad" placeholder="Cantidad de clases" class="form-control" />
                    </div>
                    <span asp-validation-for="Curso.Cantidad" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="offset-3 col-2">
                        <label asp-for="Curso.Precio"></label>
                    </div>
                    <div class="col-4">
                        <input asp-for="Curso.Precio" placeholder="Precio" class="form-control" />
                    </div>
                    <span asp-validation-for="Curso.Precio" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="offset-4 col-2">
                        <input type="submit" value="Guardar cambios" class="btn btn-primary form-control" />
                    </div>
                    <div class="col-2">
                        <a asp-page="Index" class="btn btn-success form-control">Regresar</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>