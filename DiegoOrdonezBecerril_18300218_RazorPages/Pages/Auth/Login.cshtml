@page
@model DiegoOrdonezBecerril_18300218_RazorPages.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Login";
}

<br />
<h2 class="text-info">Iniciar sesión</h2>

<div class="border">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="container p-3">
            <div class="form-group">
                <div class="row">
                    <div class="offset-3 col-2">
                        <label asp-for="LoginDTO.NombreUsuario"></label>
                    </div>
                    <div class="col-4">
                        <input asp-for="LoginDTO.NombreUsuario" placeholder="Nombre de usuario" class="form-control" />
                    </div>
                    <span asp-validation-for="LoginDTO.NombreUsuario" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="offset-3 col-2">
                        <label asp-for="LoginDTO.Password"></label>
                    </div>
                    <div class="col-4">
                        <input asp-for="LoginDTO.Password" placeholder="Contraseña" class="form-control" />
                    </div>
                    <span asp-validation-for="LoginDTO.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="offset-4 col-2">
                        <input type="submit" value="Ingresar" class="btn btn-primary form-control" />
                    </div>
                    <div class="col-2">
                        <a asp-page="Signup" class="btn btn-link">Registrarse</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>