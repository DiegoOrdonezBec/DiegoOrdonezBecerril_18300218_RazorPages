@page
@model DiegoOrdonezBecerril_18300218_RazorPages.Pages.Movies.MoviesModel
@{
    ViewData["Title"] = "Movies page";
}

<section class="container">
    <form method="post">
        <div class="mb-3 row">
            <label class="col-sm-2 col-form-label">Title</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Movie.Title" />
                <span asp-validation-for="Movie.Title" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label class="col-sm-2 col-form-label">Date</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Movie.Date" />
                <span asp-validation-for="Movie.Date" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label class="col-sm-2 col-form-label">Genre</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Movie.Genre" />
                <span asp-validation-for="Movie.Genre" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label class="col-sm-2 col-form-label">Price</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Movie.Price" />
                <span asp-validation-for="Movie.Price" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label class="col-sm-2 col-form-label">Genre</label>
            <div class="col-sm-10">
                <select name="number">
                    <option value="">Select</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                </select>
            </div>
        </div>
        <div class="mb-3 row">
            <label class="col-sm-2 col-form-label">Genre</label>
            <div class="col-sm-10">
                <select class="form-control" asp-for="IdMovie" asp-items="Model.Options"></select>
            </div>
        </div>
        <input type="submit" class="btn btn-success" value="Send" />
    </form>
</section>