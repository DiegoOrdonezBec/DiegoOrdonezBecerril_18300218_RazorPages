@page
@model DiegoOrdonezBecerril_18300218_RazorPages.Pages.ProfesorCursos.CreateModel
@{
    ViewData["Title"] = "Crear relación";
}

<br />
<h2 class="text-info">Crear relación</h2>

<div class="border">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="container p-3">
            <div class="form-group">
                <div class="row">
                    <div class="offset-3 col-2">
                        <label asp-for="ProfesorFToCursoF.NombreProfesor"></label>
                    </div>
                    <div class="col-4">
                        <select asp-for="ProfesorFToCursoF.KeyProfesor" asp-items="Model.Profesores" class="form-control"></select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="offset-3 col-2">
                        <label asp-for="ProfesorFToCursoF.NombreCurso"></label>
                    </div>
                    <div class="col-4">
                        <select asp-for="ProfesorFToCursoF.KeyCurso" asp-items="Model.Cursos" class="form-control"></select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="offset-4 col-2">
                        <input type="submit" value="Crear" class="btn btn-primary form-control" />
                    </div>
                    <div class="col-2">
                        <a asp-page="Index" class="btn btn-success form-control">Regresar</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>